
$('#{{ oUIBlock.GetId() }}').collapsible_section({
    bOpenedByDefault: {{ oUIBlock.IsOpenedByDefault()|var_export }}
    {% if oUIBlock.IsSaveCollapsibleStateEnabled() %}, collapsibleStateStorageKey: '{{ oUIBlock.GetSessionCollapsibleStateStorageKey() }}'{% endif %}
});

/*
 When collapsing Communications section, collapse all sub alerts
 We specify :not(.ibo-is-opened) even if we aim opened section as their on.click() will collapse them before our on.click()
 */
$('body').on('click','#{{ oUIBlock.GetId() }}:not(.ibo-is-opened) [data-role="ibo-collapsible-section--collapse-toggler"]', function (oEvent) {
    $('#{{ oUIBlock.GetId() }} [data-role="ibo-alert"].ibo-is-opened').find('[data-role="ibo-alert--collapse-toggler"]:first').trigger('click');
});